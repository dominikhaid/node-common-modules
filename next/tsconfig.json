{
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node",
      "jest",
      "@types/croppie",
      "@testing-library/jest-dom",
      "@types/testing-library__jest-dom"
    ],
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "lib/*": [
        "./src/lib/*"
      ],
      "src/*": [
        "./src/*"
      ],
      "public/*": [
        "./public/*"
      ],
      "data/*": [
        "./src/data/*"
      ],
      "context/*": [
        "./src/context/*"
      ],
      "hooks/*": [
        "./src/hooks/*"
      ],
      "routers/*": [
        "./src/routers/*"
      ],
      "reducers/*": [
        "./src/reducers/*"
      ],
      "includes/*": [
        "src/server/includes/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strictFunctionTypes": true,
    "sourceMap": true,
    "listFiles": true,
    "allowJs": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "global.node.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src"
  ],
  "exclude": [
    ".src/public",
    ".src/server/js",
    ".src/components/sitemap.xml.js",
    ".src/server/webpack",
    "node_modules",
    "__screenshots__",
    "log",
    "uploads",
    ".next",
    ".git",
    "out",
    "static",
    "coverage",
    "dist",
    "jest",
    "cypress",
    "stroybook-static",
    "build"
  ]
}
